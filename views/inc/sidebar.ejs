<aside class="app-sidebar sidebar-scroll">
	<div class="main-sidebar-header active">
		<a class="desktop-logo logo-light active" ><img src="assets/img/brand/logo.png" class="main-logo" alt="logo"></a>
		<a class="desktop-logo logo-dark active" ><img src="assets/img/brand/logo.png" class="main-logo" alt="logo"></a>
		<a class="logo-icon mobile-logo icon-light active" ><img src="assets/img/brand/logo.png" alt="logo"></a>
		<a class="logo-icon mobile-logo icon-dark active" ><img src="assets/img/brand/logo.png" alt="logo"></a>
	</div>
	<div class="main-sidemenu">
		<div class="app-sidebar__user clearfix">
			
		</div>
		<div class="slide-left disabled" id="slide-left"><svg xmlns="http://www.w3.org/2000/svg" fill="#7b8191" width="24" height="24" viewBox="0 0 24 24"><path d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"/></svg></div>
		<ul class="side-menu">
			<li class="slide">
				<a class="side-menu__item" href="<%= prefix %>/"><i class="fe fe-home side-menu__icon"></i><span class="side-menu__label">Dashboard</span></a>
			</li>

			<% if(session.roles.includes('viewUsers') || checkPermission('viewRoles') || checkPermission('viewClients')) { %>
			
				<li class="side-item side-item-category">Account Managements</li>
				
				<% if(session.roles.includes('viewUsers') || checkPermission('viewRoles')) { %>
					<li class="slide">
						<a class="side-menu__item" data-bs-toggle="slide" href="javascript:void(0);"><i class="fe fe-users side-menu__icon"></i><span class="side-menu__label">Globustrace Users</span><i class="angle fe fe-chevron-down"></i></a>
						<ul class="slide-menu">
							<li class="side-menu__label1"><a href="javascript:void(0);">Globustrace Users</a></li>
							<% if(session.roles.includes('viewUsers')) { %>
								<li><a class="slide-item" href="<%= prefix %>/admin_users">Manage Globustrace Users</a></li>
							<% } %>

							<% if(session.roles.includes('viewClients')) { %>
								<li><a class="slide-item" href="<%= prefix %>/users">Manage App Users</a></li>
							<% } %>

							<% if(session.roles.includes('viewRoles')) { %>
								<li><a class="slide-item" href="<%= prefix %>/roles">Manage Roles</a></li>
							<% } %>
						</ul>
					</li>
				<% } %>
				

			<% } %>

			<% if(session.roles.includes('viewDevices') || checkPermission('createDevices')) { %>
			
				<li class="side-item side-item-category">Device Managements</li>
				
				<% if(session.roles.includes('viewDevices') || checkPermission('createDevices')) { %>
					<li class="slide">
						<a class="side-menu__item" href="<%= prefix %>/devices">
						<i class="fe fe-arrow-right side-menu__icon"></i><span class="side-menu__label">Manage Devices</span></a>
					</li>
				<% } %>
				

			<% } %>
			
			
			<% if(session.roles.includes('viewNotifications') || checkPermission('viewSettings')) { %>
			
				<li class="side-item side-item-category">System</li>
				
				<% if(session.roles.includes('viewNotifications')) { %>
					<li class="slide">
						<a class="side-menu__item" href="<%= prefix %>/emailManagement">
						<i class="fe fe-mail side-menu__icon"></i><span class="side-menu__label">Email Management</span></a>
					</li>
				<% } %>
				
			<% } %>
			
		</ul>
		<div class="slide-right" id="slide-right"><svg xmlns="http://www.w3.org/2000/svg" fill="#7b8191" width="24" height="24" viewBox="0 0 24 24"><path d="M10.707 17.707 16.414 12l-5.707-5.707-1.414 1.414L13.586 12l-4.293 4.293z"/></svg></div>
	</div>
</aside>