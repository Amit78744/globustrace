<% if(message) { %>
<input type="hidden" id="alert-filter" value="<%= message.info %>" />
<% } else { %>
<input type="hidden" id="alert-filter" value="" />
<% } %>

<script type="text/javascript">
	$(document).ready(function () {
		
		<% if(message) { %>
			var infomessage = document.getElementById("alert-filter").value;
		    <% if(message.status == 'success') { %>
		        toastr.success(infomessage, 'Success'); 
		    <% } %>

		    <% if(message.status == 'error') { %>
		        toastr.error(infomessage, 'Error');   
		    <% } %>
		<% } %>

		var pathname = window.location.pathname;
		$('.side-menu a[href="'+pathname+'"]').addClass('active');
		$('.side-menu a[href="'+pathname+'"]').parent("li").parent("ul").parent("li").addClass('is-expanded');

	});
	$('.datepicker').bootstrapdatepicker({
		format: "yyyy-mm-dd",
		viewMode: "date",
		multidate: false,
		autoclose: true,
		todayHighlight: true
	})
</script>